    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.sortapp.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_mergeSortFragment"
            app:destination="@id/mergeSortFragment" />
    </fragment>
    <fragment
        android:id="@+id/mergeSortFragment"
        android:name="com.example.sortapp.MergeSortFragment"
        android:label="fragment_merge_sort"
        tools:layout="@layout/fragment_merge_sort" >
    </fragment>
